<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/item_underline"
    android:orientation="horizontal">



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6">


        <com.ime.music.view.PlayItem
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="16px"
            android:layout_marginRight="16px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="265dp"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/audio_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="1dp"
            android:clickable="false"
            android:focusable="false"
            android:text="3'"
            android:textColor="#9B9B9B"
            android:textSize="12sp"/>
    </FrameLayout>

    <com.ime.music.share.ButtonShare
        android:id="@+id/share_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="#00000000"
        android:drawableStart="@drawable/share_std"
        android:drawableLeft="@drawable/share_std" />

</LinearLayout>
