<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/btn_about_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="30dp"
        android:text="关于"
        android:button="@null"
        android:background="#F9F9F9"
        android:textSize="17sp"
        android:textColor="#333333"
        android:drawableLeft="@drawable/jiantou_zuo_std"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:paddingTop="0dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/tv_peanut_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="花生语音包"
        android:textColor="#4466EE"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingTop="200dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="300dp">
        <Button
            android:id="@+id/btn_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="用户协议"
            android:button="@null"
            android:background="#00000000"
            android:checked="true"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableRight="@drawable/jiantou_you"
            android:paddingRight="15dp"
            />

        <Button
            android:id="@+id/btn_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="隐私政策"
            android:button="@null"
            android:background="#00000000"
            android:textSize="14sp"
            android:textColor="#333333"
            android:drawableRight="@drawable/jiantou_you"
            android:paddingRight="15dp"
            />

    </LinearLayout>
</RelativeLayout>