<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:clickable="false"
    android:focusable="false"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:clickable="false"
        android:focusable="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/audio_item_float2_tv_delay"
                android:layout_width="20dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:textColor="#4466EE"
                android:textSize="12sp"
                android:textStyle="italic" />

            <com.ime.music.view.PlayItem
                android:id="@+id/audio_item_float2_tv_file_name"
                android:layout_width="248dp"
                android:layout_height="36dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxWidth="280dp"
                android:minWidth="10dp"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/audio_item_float2_iv_shoucang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shoucang" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
