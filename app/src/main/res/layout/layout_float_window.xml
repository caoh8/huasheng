<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_f9"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">

    <!--    头    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/layout_float_window_close_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/guanbi_std" />

            <TextView
                android:id="@+id/layout_float_window_headset_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_f9"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:text="拔出耳机才能录音噢"
                android:textColor="#4466EE"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/layout_float_window_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_f9"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:text="调高音量才能录音噢"
                android:textColor="#4466EE"
                android:textSize="12sp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:clickable="false"
            android:focusable="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sousuo_std"
                android:text=" "
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/layout_float_window_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="4dp"
                android:drawableLeft="@drawable/tishi_std" />

            <TextView
                android:id="@+id/layout_float_window_tv_close"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/heshang_std" />
        </LinearLayout>
    </FrameLayout>

    <!--  分类  -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:clickable="false"
        android:focusable="false">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:scrollbars="none">

            <RadioGroup
                android:id="@+id/layout_float_window_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/layout_float_window_btn_lianxiang"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="联想"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_mine"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="收藏"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_hot"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="热门"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_history"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="使用过"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_daily"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="日常"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_hi"
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="hi"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_ange"
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="气"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_sad"
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="唉"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_cute"
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="皮"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/layout_float_window_btn_sweet"
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_blue_radiobutton"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="暖"
                    android:textColor="@drawable/seletor_textcolor_audio_btn"
                    android:textSize="12sp" />
            </RadioGroup>
        </HorizontalScrollView>
    </FrameLayout>

    <!--  结果  -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:clickable="false"
        android:focusable="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false">

                <com.ime.music.view.AudioListViewFloat
                    android:id="@+id/layout_float_window_audio_list"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:layout_gravity="center"
                    android:divider="@null" />
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/layout_float_window_frame_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="暂无收藏音频"
                android:textSize="14dp"
                android:textColor="#999999"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_float_window_lianxiang_miss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_lianxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="暂无联想结果"
                android:textSize="14dp"
                android:textColor="#999999"
                />

            <TextView
                android:id="@+id/layout_float_window_xiaomi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="请前往App-音频联想解锁该功能"
                android:textSize="14dp"
                android:textColor="#999999"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wuzhangai"
                        android:layout_width="160dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_blue"
                        android:drawableLeft="@drawable/lock_std"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="请先开启权限"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/layout_float_window_tv_lear_more"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="了解更多"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

    <!--  延时 tail  -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/layout_float_window_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="13dp"
            android:gravity="center"
            android:drawableLeft="@drawable/share_std2" />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:clickable="false"
            android:focusable="false"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/layout_float_window_tv_time_delay"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="3"
                android:textColor="#9B9B9B"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:gravity="center"
                android:paddingEnd="3dp"
                android:text=" 秒后播放"
                android:textColor="#9B9B9B"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/layout_float_window_tv_set_delay"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="8dp"
                android:text="调整"
                android:textColor="#9B9B9B"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/layout_float_window_tv_0_delay"
                android:layout_width="27dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/btn_bb"
                android:gravity="center"
                android:text="0″"
                android:textColor="#333333"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/layout_float_window_tv_1_delay"
                android:layout_width="27dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/btn_bb"
                android:gravity="center"
                android:text="1″"
                android:textColor="#333333"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/layout_float_window_tv_2_delay"
                android:layout_width="27dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/btn_bb"
                android:gravity="center"
                android:text="2″"
                android:textColor="#333333"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/layout_float_window_tv_3_delay"
                android:layout_width="27dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/btn_bb"
                android:gravity="center"
                android:text="3″"
                android:textColor="#333333"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/layout_float_window_tv_4_delay"
                android:layout_width="27dp"
                android:layout_height="18dp"
                android:background="@drawable/btn_bb"
                android:gravity="center"
                android:text="4″"
                android:textColor="#333333"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
